
{{outlet}}


<ol id="todo-list" dir="rtl">
  {{#each model as |todo index|}}

        {{todo-item task=todo index=index class=(concat "todo-list " (if todo.isDone 'task-done' )) editDescription=false  tasks=model}}

  {{/each}}
</ol>
{{#if todo.editAddTask }}
  <form id="task-add-form">

  <button {{action 'addTask'}}>הוסף</button>
    {{input autofocus="autofocus" id="task-add-input" type="text" class="input-width" value=des placeholder="...הקלד כאן"}}

  </form>
{{/if}}
